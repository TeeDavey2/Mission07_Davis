@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

@model MovieModel

<h1>Add a Movie!</h1>
<div>
    <form method="post" class="d-inline-block border border-dark shadow p-5 mb-5 bg-white rounded">

        @* Input for a movie id *@
        <input type="hidden" asp-for="MovieId"/>

        <label asp-for="CategoryId">Category</label>
        <br />
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (CategoryModel c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">Title</label>
        <br />
        <input asp-for="Title"/>
        <br />

        <label asp-for="Year">Year</label>
        <br />
        <input asp-for="Year" max="@(DateTime.Now.Year)+2" />
        <br />

        <label asp-for="Director">Director</label>
        <br />
        <input asp-for="Director"/>
        <br />

        <label asp-for="Rating">Rating</label>
        <br />
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13" selected>PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited</label>
        <br />
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false" selected>No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent To</label>
        <br />
        <input asp-for="LentTo"/>
        <br />

        <label asp-for="CopiedToPlex">CopiedToPlex</label>
        <br />
        <select asp-for="CopiedToPlex">
            <option value="true">Yes</option>
            <option value="false" selected>No</option>
        </select>
        <br />

        <label asp-for="Notes">Notes</label>
        <br />
        <input asp-for="Notes" maxlength="25" />
        <br />

        <button class="btn border border-dark bg-dark bg-opacity-25 rounded mt-2" action="submit">Submit</button>

        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</div>